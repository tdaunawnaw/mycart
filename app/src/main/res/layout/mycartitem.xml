<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sugar"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/sugar"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Button
        android:id="@+id/disbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10 Discount"
        android:background="#4CAF50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grainsugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fine Grain Sugar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sugar"
        android:layout_marginLeft="20dp"/>



    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grainsugar"
        android:text=""
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@id/sugar"/>


    <Button
        android:id="@+id/minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:background="#8BC34A"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/sugar"
        />

    <TextView
        android:id="@+id/kilogram"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:hint="kg"
        android:text="  kg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/minus"
        />

    <Button
        android:id="@+id/plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:background="#8BC34A"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/kilogram"
        />


</androidx.constraintlayout.widget.ConstraintLayout>